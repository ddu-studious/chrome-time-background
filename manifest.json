{
  "manifest_version": 3,
  "name": "中国风景时钟",
  "version": "1.6.0",
  "description": "一个展示中国风景的新标签页时钟，支持天气显示、多语言、备忘录和每日任务提醒功能",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "geolocation",
    "tabs",
    "alarms",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "https://*.unsplash.com/*",
    "https://devapi.qweather.com/*",
    "https://commons.wikimedia.org/*",
    "https://upload.wikimedia.org/*",
    "https://api.github.com/*",
    "https://hacker-news.firebaseio.com/*",
    "https://www.reddit.com/*",
    "https://dev.to/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_title": "中国风景时钟",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  }
}
